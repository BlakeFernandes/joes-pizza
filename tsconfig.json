{
    "compilerOptions": {
        "target": "ES2020", // Set the JavaScript language version for emitted JavaScript and include compatible library declarations.
        "module": "commonjs", // Specify what module code is generated.
        "outDir": "./dist", // Redirect output structure to the directory.
        "forceConsistentCasingInFileNames": true, // Ensure that casing is correct in imports.
        "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type.
        "strictNullChecks": true, // Ensure strict null checks.
        "noUnusedLocals": true, // Report errors on unused locals.
        "noUnusedParameters": true, // Report errors on unused parameters.
        "esModuleInterop": true, // Enable emit interoperability between CommonJS and ES Modules.
        "skipLibCheck": true, // Skip type checking of all declaration files.
        "resolveJsonModule": true, // Include modules imported with .json extension.
        "baseUrl": ".", // Base directory to resolve non-absolute module names.
        "paths": {
            "~/*": ["./src/*"] // Aliases for module resolution.
        }
    },
    "include": ["src/**/*.ts"], // Include all .ts files in the src directory.
    "exclude": ["node_modules", "dist"] // Exclude node_modules and dist directories.
}
