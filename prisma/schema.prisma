generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
  // url      = "postgresql://yes:yes@localhost:5432/yes"
}

model Bank {
  id      Int    @id @default(autoincrement())
  
  bankId  Int
  balance String  @default("1000")
  profit  String  @default("0")

  ownerId String
  owner   User   @relation(fields: [ownerId], references: [id])

  @@unique([bankId, ownerId])
}

model User {
  id     String @id
  wallet String  @default("100")
  level  Int    @default(0)

  Bank   Bank[]
  Shops  Shop[]
}

model Shop {
  id          Int    @id @default(autoincrement())
  shopId      Int
  amountOwned String
  ownerId     String
  profit      String  @default("0")
  owner       User   @relation(fields: [ownerId], references: [id])

  @@unique([shopId, ownerId])
}

model Guild {
  id               String  @id
  defaultChannelId String?
}
